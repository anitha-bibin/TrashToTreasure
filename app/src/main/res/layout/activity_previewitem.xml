<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greencolor"
    >
    <ScrollView
        android:id="@+id/ScrollView01"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:scrollIndicators="right">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_below="@+id/grid_image"
        android:textColor="@color/splashcolor"
        android:text="plaY yard"
        android:textSize="35dp"
        />


    <ImageView
        android:layout_width="261dp"
        android:layout_height="205dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/play_yard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_image"
        android:paddingTop="20dp"
        android:text="Specifications"
        android:textColor="@color/splashcolor"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_below="@+id/grid_image"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Mesh side design for easy observation of baby's activity,
         suitable for young children 6-24 months old or young children under 95cm."
        android:textColor="@color/splashcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_treasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                 android:onClick="treasureIt"
                android:text="Treasure this Item" />

            <Button
                android:id="@+id/btn_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingLeft="25dp"
                android:clickable="true"
                android:onClick="goHome"
                android:text="See other Items" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Other Items"
                android:textSize="25dp" />

        </LinearLayout>

    </LinearLayout>


    </ScrollView>

</LinearLayout>